@model List<Products>

@{
    ViewData["Title"] = "Products Details";
}

<h1>Products details</h1>
   
<table class="table table-striped table-bordered"> 
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Stock</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model) {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.Name</td>
                <td>@product.Stock</td>
                <td>@product.Price</td>
            </tr>
        }
    </tbody>
</table>